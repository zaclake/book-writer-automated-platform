# Copy this file to .env.local and fill in your actual values

# OpenAI API Key (required)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# OpenAI Features (optional, defaults to true)
ENABLE_OPENAI_EXPANSION=true

# Clerk Authentication (required for production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# Backend URL (required for API proxying)
NEXT_PUBLIC_BACKEND_URL=https://silky-loss-production.up.railway.app

# Vercel Environment (optional, set automatically by Vercel)
VERCEL_ENV=development

# Next.js Environment
NODE_ENV=development

# Dashboard Authentication (optional)
DASHBOARD_PASSWORD=your-secure-password-here

# File Storage (for backend)
TEMP_PROJECTS_DIR=/tmp/book_writer/temp_projects 