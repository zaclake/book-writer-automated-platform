rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isServiceAccount() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider == 'custom';
    }

    // Users collection - basic user data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Credits balance - READ ONLY for users, WRITE ONLY for service accounts
      match /credits {
        allow read: if isOwner(userId);
        allow write: if isServiceAccount();
      }
      
      // Credits transactions - READ ONLY for users, WRITE ONLY for service accounts
      match /credits_transactions/{transactionId} {
        allow read: if isOwner(userId);
        allow write: if isServiceAccount();
      }
      
      // User aggregates (running totals) - READ ONLY for users, WRITE ONLY for service accounts
      match /system/agg {
        allow read: if isOwner(userId);
        allow write: if isServiceAccount();
      }
      
      // User preferences and profile data
      match /preferences/{prefsId} {
        allow read, write: if isOwner(userId);
      }
      
      // User onboarding data
      match /onboarding/{onboardingId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Projects collection
    match /projects/{projectId} {
      // Users can read/write their own projects
      allow read, write: if isAuthenticated() && 
        resource.data.metadata.owner_id == request.auth.uid;
      
      // Allow creation if user sets themselves as owner
      allow create: if isAuthenticated() && 
        request.resource.data.metadata.owner_id == request.auth.uid;
      
      // Project subcollections (chapters, references, etc.)
      match /{subcollection}/{docId} {
        allow read, write: if isAuthenticated() && 
          get(/databases/$(database)/documents/projects/$(projectId)).data.metadata.owner_id == request.auth.uid;
      }
    }

    // System configuration - READ-ONLY for authenticated users, WRITE for service accounts
    match /system/{configDoc} {
      allow read: if isAuthenticated();
      allow write: if isServiceAccount();
      
      // Model pricing data - critical for credits system
      match /model_pricing {
        allow read: if isAuthenticated();
        allow write: if isServiceAccount();
      }
    }

    // Admin collections - SERVICE ACCOUNT ONLY
    match /admin/{document=**} {
      allow read, write: if isServiceAccount();
    }

    // Analytics and logs - SERVICE ACCOUNT ONLY
    match /analytics/{document=**} {
      allow read, write: if isServiceAccount();
    }

    match /logs/{document=**} {
      allow read, write: if isServiceAccount();
    }

    // Public data (if any) - READ ONLY for all
    match /public/{document=**} {
      allow read: if true;
      allow write: if isServiceAccount();
    }

    // Default deny for all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}